# Variables de entorno para el ecosistema completo de Cyn - Einstein Kids
# Copiar este archivo a .env y configurar con valores reales

# Base de datos PostgreSQL
POSTGRES_USER=cyn_user
POSTGRES_PASSWORD=cyn_secure_pass_2024
POSTGRES_DB=cyn_einstein_kids

# Windmill
WM_URL=http://localhost:8001
WM_ADMIN_EMAIL=cyn@einstein-kids.com
WM_ADMIN_PASSWORD=cyn_admin_secure_2024
WM_WORKSPACE=cyn-einstein-kids

# Entorno
EINSTEIN_KIDS_ENV=production

# Teléfono de Cyn (formato internacional, ejemplo: +1234567890)
CYN_PHONE_NUMBER=+1234567890

# YCloud (WhatsApp Business API)
YCLOUD_API_KEY=your_ycloud_api_key_here

# Zoom (para masterclasses)
ZOOM_API_KEY=your_zoom_api_key_here
ZOOM_API_SECRET=your_zoom_api_secret_here

# Calendly (para booking de masterclasses)
CALENDLY_API_KEY=your_calendly_api_key_here
CALENDLY_WEBHOOK_SECRET=your_calendly_webhook_secret_here

# Clawbot.ai (AI agent)
CLAWBOT_API_KEY=your_clawbot_api_key_here
CLAWBOT_WEBHOOK_SECRET=your_clawbot_webhook_secret_here

# Configuración de seguridad
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Configuración de masterclass
MASTERCLASS_DURATION_MINUTES=90
MASTERCLASS_SHOWUP_TARGET_RATE=70
MASTERCLASS_MAX_ATTENDEES=100

# Configuración de seguimiento
FOLLOWUP_DAYS_BEFORE_EVENT=3
FOLLOWUP_HOURS_BEFORE_EVENT=2
REMINDER_HOURS_BEFORE_EVENT=[24, 2, 0.5]

# URLs de servicios externos (opcional, para desarrollo)
WEBHOOK_BASE_URL=https://your-domain.com/webhooks
FRONTEND_BASE_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api